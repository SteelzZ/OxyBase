<?xml version="1.0" encoding="UTF-8"?>
<profile name="Oxy">
	<!-- Set ENV variables ability -->
	
	<!-- 
	Project folders structure relative to project home directory 
	-->
	<structure base_path="K:/Development/Workspace/OxyBase-GoogleCode/trunk/">
 		<application abstract="true" default="application">
			<config></config>
			<domains>
				<domain abstract="true" default="admin">
					<config></config>
					<library></library>
					<modules>
					
						<!-- Module structure Default TPL  -->
						<smodule abstract="true" 
									   default="defaultinis">
							<config></config>
							<controllers>
								<resource type="controller">Director.php</resource>	
							</controllers>
							<models>
								<resource type="model">Manager.php</resource>
							</models>
							<resource type="bootstrap" tpl="OxySimpleModuleBootstrap">Bootstrap.php</resource>
						</smodule>
						
						<!-- Module structure Extended TPL  -->
						<emodule abstract="true" 
										 default="defaultinis">
							<config accepted_resources="config">
								<resource type="config" tpl="ModuleConfig">config.xml</resource>
							</config>
							<controllers accepted_resources="controller">
								<resource type="controller" filters="controller">DirectorController.php</resource>	
								<resource type="controller" filters="controller">ManagerController.php</resource>	
								<resource type="controller" filters="controller">PrototypeController.php</resource>	
								<resource type="controller" filters="controller">TestingController.php</resource>	
							</controllers>
							<models accepted_resources="model">
								<resource type="model">Manager.php</resource>
							</models>
							<plugins accepted_resources="plugin">
								<resource type="plugin">Auth.php</resource>
							</plugins>
							<resources>
								<db_tables>
									<Generated></Generated>
								</db_tables>
							</resources>
							<services accepted_resources="service">
								<resource type="service">Feed.php</resource>
							</services>
							<views>
								<filters></filters>
								<helpers></helpers>
								<scripts>
									<eskin abstract="true" default="oxy">
										 <controller abstract="true" 
										 			 default="index" 
										 			 auto="../../../controllers"
										 			 accepted_resources="view">
										 </controller> 
									</eskin>
								</scripts>
							</views>
							<resource type="bootstrap" tpl="OxyModuleBootstrap">Bootstrap.php</resource>
						</emodule>
					</modules>
					<resources>
						<db_tables>
							<Generated></Generated>
						</db_tables>
					</resources>
				</domain>
			</domains>
			<logs></logs>
			<resources>
				<db_tables>
					<Generated></Generated>
				</db_tables>
			</resources>
		</application>
		<public abstract="true" default="www">
			<domain abstract="true" auto="../application/domains">
				<skin abstract="true">
					<css>
						<module abstract="true" 
								auto="../application/domains/domain/modules"
								accepted_resources="css">
						</module>
					</css>
					<images>
						<module abstract="true" 
								auto="../application/domains/domain/modules"
								accepted_resources="image">
						</module>
					</images>
					<js>
						<module abstract="true" 
								auto="../application/domains/domain/modules"
								acceptedResources="js">
						</module>
					</js>
					<layouts>
						<module abstract="true" 
								auto="../application/domains/domain/modules"
								accepted_resources="tpl">
						</module>
					</layouts>
				</skin>
			</domain>
		</public>
	</structure>
	
	
	<!--
	Default OxyBase profile project configuration 
	-->
	<config>
		<!-- PRODUCTION SETTINGS  -->
		<production> </production>
		<!-- /PRODUCTION SETTINGS  -->
	
		<!-- DEVELOPMENT SETTINGS  -->
		<development>
			<!-- Application settings -->
			<phpSettings>
				<display_startup_errors>1</display_startup_errors>
				<display_errors>1</display_errors>
			</phpSettings>
			
			<includePaths>
				<resources>../application/resources</resources>
				<domains>../application/domains</domains>
				<External>../application/library/External</External>
			</includePaths>
			
			<autoloadernamespaces>
				<namespace>Cmp</namespace>
				<namespace>Oxy</namespace>
			</autoloadernamespaces>
			
			<bootstrap>
				<!-- Relative to doc root -->
				<path>../application/Bootstrap.php</path>
				<class>Bootstrap</class>
			</bootstrap>
			<!-- / Application settings -->
	
			<!-- Resources -->
			<resources>
				<!-- Oxy Frontcontroller resource -->
				<Front>
					<dispatcher>Oxy_Controller_Dispatcher_Domain</dispatcher>
					<request>Oxy_Controller_Request_Http</request>
					<response></response>
					<router>Oxy_Controller_Router_Rewrite</router>
					<routes>
						<domain_route>Oxy_Controller_Router_Route_Domain</domain_route>
					</routes>
					<domaindirectory>../application/domains</domaindirectory> 
					<plugins>
						<plugin1>Oxy_Controller_Plugin_Json</plugin1> 
					</plugins>
	
					<defaultdomain>frontend</defaultdomain>
					<defaultmodule>default</defaultmodule>
					<defaultcontrollername>index</defaultcontrollername>
					<defaultaction>index</defaultaction>
					<throwexceptions>true</throwexceptions> 
					<params>
						<prefixDefaultModule>1</prefixDefaultModule> 
					</params> 
				</Front>
				
	
				<!-- Oxy config Oxy/Application/Resource/Conf.php -->
				<conf></conf>
				
	
				<!-- Oxy config Oxy/Application/Resource/Errorhandler.php -->
				<errorHandler>
					<errorsFile>../application/config/oxy_errors.xml</errorsFile>
				</errorHandler>
				
	
				<!-- Oxy config Oxy/Application/Resource/Logger.php -->
				<logger>
					<logFile>../application/logs/error.log</logFile> 
				</logger>
				
	
				<!-- Oxy config Oxy/Application/Resource/Doctrine.php -->
				<doctrine>
					<dbParams> 
						<charset>utf8</charset>
						<connectionName>app</connectionName> 
						<driver>mysql</driver>
						<host>localhost</host> 
						<port>3306</port> 
						<db>oxy_cms</db>
						<user>root</user> 
						<pass>root</pass> 
					</dbParams> 
				</doctrine>
				
	
				<!-- Oxy Smarty integration resource -->
				<Smarty> 
					<params>
						<engine>smarty</engine> 
						<compileDir>C:\tmp</compileDir>
						<configDir>application/library/Externals/smarty/configs</configDir>
					</params> 
					<caching>false</caching>
					<compile_check>true</compile_check>
					<force_compile>true</force_compile> 
					<cache_dir>C:/tmp</cache_dir>
					<suffix>tpl</suffix> 
					<skins>
						<oxybase>oxy</oxybase> 
					</skins> 
				</Smarty>
				
	
				<!-- Oxy Layout resource -->
				<OLayout>
					<base_include_path>../application/</base_include_path>
					<layouts_dir>layouts</layouts_dir> 
					<domains> 
						<oxybase>
							<layout_path>oxybase/</layout_path> 
							<layout_name>index</layout_name>
						</oxybase> 
					</domains>
					<base_url>http://localhost/Workspace/OxyBase/trunk/public/</base_url>
					<suffix>tpl</suffix> 
				</OLayout>
				
	
				<!-- Oxy modules -->
				<OModules></OModules>
				
				<!-- Oxy domains -->
				<Domains></Domains>
				
			</resources>
			<!-- /Resources -->
	
			<pluginPaths>
				<Oxy_Application_Resource>../application/library/Oxy/Application/Resource</Oxy_Application_Resource>
			</pluginPaths>
		</development>
		<!-- /DEVELOPMENT SETTINGS  -->
	
		<!-- TESTING SETTINGS  -->
		<testing>
	
		</testing>
		<!-- /TESTING SETTINGS  -->
	</config>
	
	<customplugin>
	</customplugin>
	<!-- 
	Continues integration configuration
	-->
	<ci></ci>
	<!--
	Deployment default configuration 
	-->
	<deploy></deploy>
</profile>
