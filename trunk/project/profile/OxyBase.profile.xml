<?xml version="1.0" encoding="UTF-8"?>
<profile name="OxyBase">
	<!-- Set ENV variables ability -->
	<!-- 
		K:\Development\Workspace\OxyBase-GoogleCode\trunk\profiles\OxyBase\OxyBase.profile.xml
		
		Create module in admin domain application
		structure:create:emodule:language:admin
	 -->
	<!-- 
	Project folders structure relative to project home directory 
	-->
	<structure base_path="K:/Development/Workspace/OxyBase-GoogleCode/trunk/">
 		<application abstract="true" default="application">
			<config></config>
			<domains>
				<domain abstract="true" default="admin">
					<config></config>
					<library></library>
					<modules>
						<!-- Module structure Extended TPL  -->
						<emodule abstract="true" 
								 default="defaultinis">
								 
							<build accepted_resources="xml">
								<resources accepted_resources="sql">
									<!-- Install dump /idump -->
									<resource type="sql">idump.sql</resource>
									<!-- Update dump /udump -->
									<resource type="sql">udump.sql</resource>
									<!-- Remove dump /rdump -->
									<resource type="sql">rdump.sql</resource>
								</resources>
								<resource type="xml" tpl="PhingPackConfig">pack.xml</resource>	
								<resource type="xml" tpl="PhingInstallConfig">install.xml</resource>	
								<resource type="xml" tpl="PhingUninstallConfig">unistall.xml</resource>	
								<resource type="xml" tpl="PhingUpdateConfig">update.xml</resource>	
							</build>	
									 
							<config accepted_resources="xml">
								<resource type="xml" tpl="ModuleConfig">config.xml</resource>
							</config>
							
							<controllers accepted_resources="php">
								<resource type="php" tpl="OxySimpleController">DirectorController.php</resource>	
							</controllers>
							
							<models accepted_resources="php"></models>
							<plugins accepted_resources="php"></plugins>
							
							<resources>
								<db_tables>
									<Generated></Generated>
								</db_tables>
							</resources>
							
							<services accepted_resources="php"></services>
							
							<views>
								<filters></filters>
								<helpers></helpers>
								<scripts>
									<eskin abstract="true" default="oxy">
										 <controller abstract="true" 
										 			 default="index" 
										 			 auto="../../../controllers"
										 			 accepted_resources="tpl">
										 </controller> 
									</eskin>
								</scripts>
							</views>
							
							<resource type="php" tpl="OxyModuleBootstrap">Bootstrap.php</resource>
						</emodule>
					</modules>
					<resources>
						<db_tables>
							<Generated></Generated>
						</db_tables>
					</resources>
					<resource type="php" tpl="OxyDomainBootstrap">Bootstrap.php</resource>
				</domain>
			</domains>
			<logs></logs>
			<resources>
				<db_tables>
					<Generated></Generated>
				</db_tables>
			</resources>
			<resource type="php" tpl="OxyAppBootstrap">Bootstrap.php</resource>
		</application>
		<public abstract="true" default="www">
			<domain abstract="true" auto="../application/domains">
				<skin abstract="true">
					<css>
						<module abstract="true" 
								auto="../application/domains/domain/modules"
								accepted_resources="css">
						</module>
					</css>
					<images>
						<module abstract="true" 
								auto="../application/domains/domain/modules"
								accepted_resources="image">
						</module>
					</images>
					<js>
						<module abstract="true" 
								auto="../application/domains/domain/modules"
								acceptedResources="js">
						</module>
					</js>
					<layouts>
						<module abstract="true" 
								auto="../application/domains/domain/modules"
								accepted_resources="tpl">
						</module>
					</layouts>
				</skin>
			</domain>
		</public>
	</structure>
	
	<integration>
	
	</integration>
	
</profile>
