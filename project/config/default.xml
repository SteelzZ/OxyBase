<?xml version="1.0" encoding="utf-8"?>
<config>
	<!-- PRODUCTION SETTINGS  -->
	<production></production>
	<!-- /PRODUCTION SETTINGS  -->

	<staging></staging>

	<!-- DEVELOPMENT SETTINGS  -->
	<development>
		<!-- Application settings -->
		<phpSettings>
			<display_startup_errors>1</display_startup_errors>
			<display_errors>1</display_errors>
		</phpSettings>
		<autoloadernamespaces>
			<namespace>Oxy</namespace>
		</autoloadernamespaces>
		<bootstrap>
			<path>../project/Bootstrap.php</path>
			<class>Bootstrap</class>
		</bootstrap>
		<!-- / Application settings -->

		<!-- Resources -->
		<resources>
			<!-- Oxy Frontcontroller resource Oxy/Application/Resource/Frontcontroller.php -->
			<Frontcontroller>
				<domaindirectory>../project/apps</domaindirectory> 
				<defaultdomain>frontend</defaultdomain>
				<defaultmodule>home</defaultmodule>
				<defaultcontrollername>index</defaultcontrollername>
				<defaultaction>index</defaultaction>
				<throwexceptions>true</throwexceptions> 
				<params>
					<prefixDefaultModule>1</prefixDefaultModule> 
				</params> 
			</Frontcontroller>
			<!-- /Oxy Frontcontroller resource Oxy/Application/Resource/Frontcontroller.php -->
			
			<!-- Session -->
            <session>
                 <save_path>${tmp.dir}</save_path>
                 <use_only_cookies>true</use_only_cookies>
            </session>
            <!-- /Session -->
			
			<View>
                <suffix>tpl</suffix> 
            </View>			
			<!-- Oxy modules Oxy/Application/Resource/Modules.php-->
			<Modules></Modules>
			<!-- /Oxy modules Oxy/Application/Resource/Modules.php-->
			
			<!-- Oxy domains Oxy/Application/Resource/Domains.php -->
			<Domains>
				<path>../project/apps</path>
			</Domains>
			<!-- /Oxy domains Oxy/Application/Resource/Domains.php -->
			
		</resources>
		<!-- /Resources -->

		<pluginPaths>
			<Oxy_Application_Resource>../project/library/Oxy/Application/Resource</Oxy_Application_Resource>
		</pluginPaths>
	</development>
	<!-- /DEVELOPMENT SETTINGS  -->

	<!-- TESTING SETTINGS  -->
	<testing>
        <!-- Application settings -->
        <phpSettings>
            <display_startup_errors>1</display_startup_errors>
            <display_errors>1</display_errors>
        </phpSettings>
        <autoloadernamespaces>
            <namespace>Oxy</namespace>
        </autoloadernamespaces>
        <bootstrap>
            <path>../project/Bootstrap.php</path>
            <class>Bootstrap</class>
        </bootstrap>
        <!-- / Application settings -->

        <!-- Resources -->
        <resources>
            <!-- Oxy Frontcontroller resource Oxy/Application/Resource/Frontcontroller.php -->
            <Frontcontroller>
                <domaindirectory>../project/apps</domaindirectory> 
                <defaultdomain>frontend</defaultdomain>
                <defaultmodule>home</defaultmodule>
                <defaultcontrollername>index</defaultcontrollername>
                <defaultaction>index</defaultaction>
                <throwexceptions>true</throwexceptions> 
                <params>
                    <prefixDefaultModule>1</prefixDefaultModule> 
                </params> 
            </Frontcontroller>
            <!-- /Oxy Frontcontroller resource Oxy/Application/Resource/Frontcontroller.php -->
            
            <!-- Session -->
            <session>
                 <save_path>${tmp.dir}</save_path>
                 <use_only_cookies>true</use_only_cookies>
            </session>
            <!-- /Session -->
            
            <View>
                <suffix>tpl</suffix> 
            </View>         
            <!-- Oxy modules Oxy/Application/Resource/Modules.php-->
            <Modules></Modules>
            <!-- /Oxy modules Oxy/Application/Resource/Modules.php-->
            
            <!-- Oxy domains Oxy/Application/Resource/Domains.php -->
            <Domains>
                <path>../project/apps</path>
            </Domains>
            <!-- /Oxy domains Oxy/Application/Resource/Domains.php -->
            
        </resources>
        <!-- /Resources -->

        <pluginPaths>
            <Oxy_Application_Resource>../project/library/Oxy/Application/Resource</Oxy_Application_Resource>
        </pluginPaths>
	</testing>
	<!-- /TESTING SETTINGS  -->

</config>